<div class='intro'>
	<h1 class='intro__hed tk-canela'>{{meta.title}}</h1>
	<p class='intro__dek tk-atlas'>{{meta.description}}</p>
	<p class='intro__byline tk-atlas'>By
		<a href='{{meta.author.url}}' target='_blank'>
			<strong>{{meta.author.name}}</strong>
		</a>
	</p>
</div>
<div class="intro__copy">
	{{#each copy.intro}}
		<p class='prose'>{{{value}}}</p>
	{{/each}}
</div>
<div class="svg-container">
	<svg class="scatter">
	</svg>
</div>
