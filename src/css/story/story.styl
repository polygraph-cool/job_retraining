/* CUSTOM STORY STYLE */

// .svg-container
//   margin 0 auto
//   position relative
//   width 100%



figure.sticky
  position sticky
  top 0
  width 100%
  margin 0 auto

//

svg.scatter
  margin auto
  display block
  overflow hidden

.automatability-label
  text-transform uppercase
  font-weight 600
  text-anchor end
  font-family 'Atlas Grotesk Web'
  // transform-origin top left
  transform rotate(-90deg)

.trucker-developer-groups
  font-family 'Atlas Grotesk Web'

.heavy-prose
  font-weight 600

.heavy-prose-blue-text
  font-weight 600
  color #2F80ED

.heavy-prose-red-text
  font-weight 600
  color #EB5757

.two-job-automatability-value
  font-family 'Atlas Grotesk Web'
  // text-anchor right
  font-weight 600

.intro-y-axis
  font-family 'Atlas Grotesk Web'
  .tick
    text
      fill #8e8d87
    line
      stroke #8e8d87
  path
    stroke-width 0.5
    stroke #8e8d87

.y-axis-label
  font-family 'Atlas Grotesk Web'
  font-weight 600
  .min
    text
      fill #2F80ED
  .max
    text
      fill #EB5757

.jobTooltip
  position absolute
  background #FFF
  visibility hidden

.job-bar
  height 20px
  background #e0e0e0
  border-style solid
  border-color #D928BC
  overflow visible
  display inline-block
  vertical-align middle
  line-height 50px

.job-bar-value
  display inline-block
  margin-bottom 1px
  font-weight 600

.bar-container
  display block
  font-size 14px

.job-data-container
  display flex
  justify-content space-between

.tooltip-section-names
  display flex
  justify-content space-between
  text-decoration underline
  font-weight 600
  font-size 14px
  margin-top 1em
  margin-bottom 1em

.job-selected-name
  font-size 24px

.job-compared-name
  font-weight 600
  font-size 14px
  overflow hidden
  max-width 30ch

.job-compared-number
  font-style italic
  font-size 12px

.jobTooltip
  padding 20px
  pointer-events none
  border 1px solid black;
  font-family 'Atlask Grotesk Web', sans-serif

.transition-button
  display inline-block
  margin-left 1em

.scene
  margin-top 100vh

.all-automation
  margin-top 0vh

.two-jobs-automation
  margin-top 20vh


.job-name
  font-size 12px


.min-similarity
  font-size 12px

.max-similarity
  font-size 12px

.similarity-annotation
  font-family 'Atlas Grotesk Web'
  font-size: 14px

.scatter-y-axis
  path.domain
    opacity 0
  g.tick
    text
      fill #C6C6C6
      font-family 'Atlas Grotesk Web'
    line
      stroke #C6C6C6

.axis-label
  font-family 'Atlas Grotesk Web'


.scatter-label-y-axis
  fill #000000
  font-family 'Atlas Grotesk Web'
  text-anchor middle

.chart-title-div
  font-family 'Alfa Slab One', cursive
  font-size 24px
  text-align center
  padding-top 2vh
  @media (max-width: 500px)
    font-size 16px

.chart-title-pt1
  font-family 'Alfa Slab One', cursive
  text-align center

.bisecting-line
  stroke #000
  stroke-dasharray 3,3

.job-number-title
  font-family 'Atlas Grotesk Web'
  font-size 14px
  font-weight 600
  text-anchor middle

.job-number-title-background
  font-family 'Atlas Grotesk Web'
  font-size 14px
  font-weight 600
  text-anchor middle
  stroke #FFF
  stroke-width 1px

.legend-job-number__text
  font-size 12px
  font-family 'Atlas Grotesk Web'
  text-anchor middle

.legend-wages__title
  font-family 'Atlas Grotesk Web'
  font-size 14px
  font-weight 600
  text-anchor middle
  @media (max-width: 500px)
    font-size 10px

.legend-wages__text-annotation
  font-size 12px
  font-family 'Atlas Grotesk Web'
    @media (max-width: 500px)
      font-size 8px

.job-selector__container
  text-align center

.section__scene
  padding-bottom 100vh
/* @end */
