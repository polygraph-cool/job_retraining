/* CUSTOM STORY STYLE */

.svg-container
  margin 0 auto
  position relative
  width 100%

svg.scatter
  margin auto
  display block
  overflow hidden

.heavy-prose
  font-weight 600

.two-job-automatability-value
  font-family 'Atlas Grotesk Web'
  font-weight 600


.intro-y-axis
  path
    stroke 0.5

.jobTooltip
  position absolute
  background #FFF

.job-bar
  height 20px
  background #e0e0e0
  border-style solid
  border-color black

  overflow visible
  display inline-block

.job-bar-value
  display inline-block
  margin-bottom 1px

.bar-container
  display block

.job-selected-name
  font-size 24px

.jobTooltip
  pointer-events none
  border 1px solid black;

.transition-button
  display inline-block
  margin-left 1em

.scene
  margin-top 100vh


.job-name
  font-size 12px
