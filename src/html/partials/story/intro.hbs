<div class='intro'>
	<h1 class='intro__hed'>{{meta.title}}</h1>
	<p class='intro__dek tk-atlas'>{{meta.description}}</p>
	<p class='intro__byline tk-atlas'>By
		<a href='{{meta.author.url}}' target='_blank'>
			<strong>{{meta.author.name}}</strong>
		</a>
	</p>
</div>
<div class="intro__copy">
	{{#each copy.intro}}
		<p class='prose'>{{{value}}}</p>
	{{/each}}
</div>

<figure class="svg-container sticky">

	<div class="misc-chart-elements-container misc-elements">
		<div class='chart-title-div misc-elements'>
			<span class="chart-title-pt1">Which jobs should</span>
			<span class="chart-title-pt2">1,789,094</span>
			<span class="chart-title-pt3">truckers</span>
			<span class="chart-title-pt4">earning</span>
			<span class="chart-title-pt5">$82,000</span>
			<span class="chart-title-pt6">yearly, transition to?</span>
		</div>
		<div class='job-selector__container misc-elements'></div>
	</div>
	<svg class="scatter">
	</svg>
</figure>
